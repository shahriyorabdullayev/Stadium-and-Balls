<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_mainn"
    android:orientation="vertical"
    tools:context=".ui.fragments.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="12dp"
            android:layout_marginVertical="12dp"
            android:layout_marginStart="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_button"
                android:padding="10dp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btn_sound_off"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_sound_offf"
                android:background="@drawable/bg_settings_selected"
                android:padding="12dp"
                android:layout_marginHorizontal="20dp"/>

            <ImageView
                android:id="@+id/btn_sound_on"
                android:layout_marginHorizontal="20dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_sound_onn"
                android:background="@drawable/bg_settings_non_selected"
                android:padding="12dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginVertical="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btn_vibr_off"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_vibr_offf"
                android:background="@drawable/bg_settings_selected"
                android:padding="12dp"
                android:layout_marginHorizontal="20dp"/>

            <ImageView
                android:id="@+id/btn_vibr_on"
                android:layout_marginHorizontal="20dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_vibr_onnn"
                android:background="@drawable/bg_settings_non_selected"
                android:padding="12dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/bg_settings_non_selected"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:id="@+id/btn_en"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ENG"
                    android:textColor="#2D3645"
                    android:fontFamily="@font/jura_bold"
                    android:gravity="center"
                    android:textSize="32sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/bg_settings_non_selected">
                <TextView
                    android:id="@+id/btn_ru"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="RU"
                    android:textColor="#2D3645"
                    android:fontFamily="@font/jura_bold"
                    android:gravity="center"
                    android:textSize="32sp"/>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>